<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ke.co.ryletechnologies.dibonsyst.activity.SinglepayActivity"
    android:background="@drawable/index1">


    <EditText
        android:id="@+id/etMobNumber"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="46dp"
        android:textAlignment="center"

        android:layout_below="@+id/tVSinglePay"
        android:layout_alignLeft="@+id/etAmount"
        android:layout_alignStart="@+id/etAmount"
        android:hint="Input Mobile Number"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:ems="10"
        android:hint="Input Amount"
        android:inputType="number"
        android:layout_marginTop="37dp"
        android:textAlignment="center"
        android:layout_below="@+id/etMobNumber"
        android:layout_alignLeft="@+id/bPay"
        android:layout_alignStart="@+id/bPay"
        android:textColorHint="#fff"/>

    <Button
        android:id="@+id/bPay"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:background="#59237f"
        android:text="PAY"
        android:textColor="#fff"
        android:layout_below="@+id/etAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <TextView
        android:id="@+id/tVSinglePay"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="#59237f"
        android:text="Single Payments"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25sp"
      />


</android.widget.RelativeLayout>
